defaults
    mode http
    timeout client 15s
    timeout connect 10s
    timeout server 15s
    timeout http-request 10s

frontend http-in
    bind *:80
    redirect scheme https code 301 if !{ ssl_fc }

frontend https-in
    bind *:443 ssl crt /etc/haproxy/certs/yourdomain.pem
    default_backend servers

backend servers
    balance roundrobin
    server 6509-web-01 44.202.65.76:443 check
    server 6509-web-02 54.165.2.19:443 check 
